{
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    },
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
  
      "strict": true,
      "alwaysStrict": true,
      "pretty": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "forceConsistentCasingInFileNames": true,
  
    },
    "exclude": ["node_modules", "dist", "client"]
  }
  